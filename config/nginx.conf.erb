daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

#environment which help worker know where to store transcoded file and expose link
#ex. /apt/html/hls
env INDEX_PREFIX_LOCATION=<%= ENV['INDEX_PREFIX_LOCATION']%>;

#ex. http://yourapp.heroku.com/hls
env INDEX_PREFIX_URL=<%= ENV['INDEX_PREFIX_URL'] %>;

#ex. /apt/html/hls
env TS_PREFIX_LOCATION=<%= ENV['TS_PREFIX_LOCATION'] %>;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
    gzip on;
    gzip_comp_level 2;
    gzip_min_length 512;

	server_tokens off;


	upstream app_server {
		server unix:/tmp/nginx.socket fail_timeout=0;
 	}

	server {
		listen <%= ENV["PORT"] %>;
		server_name _;
		keepalive_timeout 5;

		location / {
			root   html;
			index  index.html index.htm;
			#proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			#proxy_set_header Host $http_host;
			#proxy_redirect off;
			#proxy_pass http://app_server;
		}
		
		location ~ ^/transcode/hls/(.*) {
	            transcode " ";
    	}
	}
}
