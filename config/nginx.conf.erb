daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

#environment which help worker know where to store transcoded file and expose link
#ex. /apt/html/hls
env PREFIX_LOCATION=<%= ENV['PREFIX_LOCATION']%>;

#ex. http://yourapp.heroku.com/hls
env PREFIX_URL=<%= ENV['PREFIX_URL'] %>;


events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
        gzip on;
        gzip_comp_level 2;
        gzip_min_length 512;

	server_tokens off;

	log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
	access_log logs/nginx/access.log l2met;
	error_log logs/nginx/error.log;

	include mime.types;
	default_type application/octet-stream;
	sendfile on;

	#Must read the body in 5 seconds.
	client_body_timeout 5;

	

	server {
		listen <%= ENV["PORT"] %>;
		server_name _;
		keepalive_timeout 5;

		index index.php;
		location ~ \.php$ {
			#try_files $uri =404;
            root html;
            fastcgi_pass unix:/var/run/php5-fpm.sock;
            fastcgi_index index.php;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
            include fastcgi_params;
		}
		
		location ~ ^/transcode/hls? {
				add_header Access-Control-Allow-Origin *;
	            transcode " ";
    	}

    	location ~ ^/transcode/pseudo-hls? {
				add_header Access-Control-Allow-Origin *;
	            transcode " ";
    	}

	}
}
